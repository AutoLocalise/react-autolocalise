{
  "type": "module",
  "name": "react-autolocalise",
  "version": "1.0.0",
  "description": "Auto-translation SDK for React and Next.js applications with SSR support",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.cjs",
      "types": "./dist/server/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "react",
    "next",
    "nextjs",
    "ssr",
    "translation",
    "i18n",
    "localization"
  ],
  "author": "AutoLocalise",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^22.14.1",
    "@types/react": "^18.3.23",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "react": "^19.1.1",
    "rollup": "^3.28.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AutoLocalise/react-autolocalise"
  },
  "bugs": {
    "url": "https://github.com/AutoLocalise/react-autolocalise/issues"
  },
  "homepage": "https://www.autolocalise.com"
}
